html
	head
		title #{title}
	body
		script(src='http://code.jquery.com/jquery-1.9.1.js')
		script(src='/js/tasks_client.js')
		h1 #{title}
		table
			thead
				tr
					th Task number
					th Monster
					th Amount
					th Noteworthy drops
					th
			tbody
				- var i=0
				each task in tasks
					- i++
					tr
						td #{task.taskNumber}
						td #{task._id}
						td #{task.amount}
						td #{task.noteworthyDrop}
				- i++
				tr
					td
					td
						input(id='taskid')
					td
						input(id='taskamt')
					td
						input(id='tasknwdrop')
					td
						button(id='btn_add', onClick='on_add('+i+')') Add Task